{
  "name": "use-search",
  "version": "0.1.0",
  "description": "Lightweight index search for the frontend with no runtime dependencies",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "tsc -w",
    "test": "nyc ava",
    "test:watch": "ava --watch",
    "build": "tsc --emitDeclarationOnly & esbuild ./src/ --outdir=dist --bundle --format=esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreasphil/use-search.git"
  },
  "author": "Andreas Philippi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andreasphil/use-search/issues"
  },
  "homepage": "https://github.com/andreasphil/use-search#readme",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "ava": "^3.14.0",
    "esbuild": "^0.8.53",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
